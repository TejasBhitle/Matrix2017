<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="spit.matrix2017.Activities.EventDetails"
    tools:showIn="@layout/activity_event_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <!--DESCRIPTION-->
            <android.support.v7.widget.CardView
                android:id="@+id/description_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Description_Card">


            </android.support.v7.widget.CardView>

            <!--VENUE AND TIME-->
            <android.support.v7.widget.CardView
                android:id="@+id/venue_time_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Description_Card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_event_venue_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="8dp"
                        android:text="@string/venue_time"
                        android:textColor="@color/colorAccent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/venue_time_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--RULES-->
            <android.support.v7.widget.CardView
                android:id="@+id/rules_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Description_Card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="4dp">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_event_rules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/rules"
                        android:textColor="@color/colorAccent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_event_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="8dp"
                            android:text="@string/description"
                            android:textColor="@color/colorAccent"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/description_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:paddingEnd="8dp"
                            android:paddingStart="8dp" />

                    </LinearLayout>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/rules_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--PRIZES-->
            <android.support.v7.widget.CardView
                android:id="@+id/prizes_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Description_Card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="4dp">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_event_prizes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/prizes"
                        android:textColor="@color/colorAccent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/prizes_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--ORGANIZERS-->
            <android.support.v7.widget.CardView
                android:id="@+id/organizers_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Description_Card">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_event_organizers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/organizers"
                        android:textColor="@color/colorAccent"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <!--CONTACT ONE-->

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="8dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/contact_name_one"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/contact_person_one" />

                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/save_contact_person_one"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"
                            android:src="@drawable/svg_save_white_48px" />

                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/call_contact_person_one"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"
                            android:src="@drawable/svg_phone_white_24px" />


                    </android.support.v7.widget.LinearLayoutCompat>

                    <!--CONTACT TWO-->

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="8dp">


                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/contact_name_two"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/contact_person_two" />

                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/save_contact_person_two"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="8dp"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"
                            android:src="@drawable/svg_save_white_48px" />

                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/call_contact_person_two"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            style="@style/Base.Widget.AppCompat.Button.Borderless"
                            android:src="@drawable/svg_phone_white_24px" />


                    </android.support.v7.widget.LinearLayoutCompat>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </android.support.v7.widget.LinearLayoutCompat>

    </ScrollView>

</android.support.v4.widget.NestedScrollView>
